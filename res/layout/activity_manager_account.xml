<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_background_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
   <include layout="@layout/top_title"/>
    <LinearLayout
        android:id="@+id/ll_add_user"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/set_bg_down"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号一"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13813813888"
            />


        <ImageView
            android:layout_marginLeft="120dp"
            android:src="@drawable/check_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_pwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_add_user"
        android:background="@drawable/set_bg_up"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="25dp"
            android:src="@drawable/add_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />


        <TextView
            android:id="@+id/tv_add_account"
            android:textColor="@color/light_green"
            android:layout_marginLeft="35dp"
            android:text="@string/add_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</RelativeLayout>
